	<script>
		function toggleAnswer(clickedElement, questionNumber) {
			var answerId = 'answer' + questionNumber;
			var answer = document.getElementById(answerId);
			var answerComputedStyle = window.getComputedStyle(answer);

			var children = clickedElement.children;

			for (var i = 0; i < children.length; i++) {
