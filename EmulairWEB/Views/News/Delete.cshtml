@model Emulair.BusinessLogic.Implementation.News.Models.NewsModel

@{
    ViewData["Title"] = "Delete";
}


<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
