@inject Emulair.Common.DTOs.CurrentUserDto CurrentUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Emulair</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px; /* Vertically center the text there */
        }

        body {
            padding: 0;
            margin: 0 !important;
        }

        footer > ul {
            display: flex;
            flex-direction: column;
            width: 100vw;
            list-style: none;
            background-color: #D9D9D9;
            color: black;
            margin: 0;
            padding-left: 5rem;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        footer > ul > li {
            display: inline-block;
            width: 150px;
            padding-left: 0.7rem;
            padding-top: 0.7rem;
            padding-bottom: 0.7rem;
            cursor: pointer;
            font-weight: 500;
            transition: 200ms color, 200ms background-color;
        }

        footer > ul > li:hover {
            padding-top: 0.7rem;
            padding-bottom: 0.7rem;
            cursor: pointer;
            background-color: black;
            color: #D9D9D9;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <header>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <ul>
            <li>Contacts</li>
            <li>More About us</li>
            <li>Map</li>
            <li>Games</li>
        </ul>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
